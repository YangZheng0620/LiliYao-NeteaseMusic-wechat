/* 顶部状态栏 */
.nav-bar {
  position: fixed;
  top: 0;
  z-index: 99;
  /* background: #999999; */
  width: 100%;
}

/* 胶囊按钮区域 */
.nav-bar .menu-bar {
  display: flex;
  align-items: center;
  position: absolute;
  width: 100%;
  /* background: #333; */
  color: #fff;
  font-size: 20px;
  font-weight: 700;
}

/* 导航栏按钮 */
.nav-bar .menu-bar .left {
  display: flex;
  flex: 1;
}

/* 导航栏标题 */
.nav-bar .menu-bar .title {
  flex: 2;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  text-align: center;
}

/* 导航栏占位 */
.nav-bar .menu-bar .right {
  flex: 1;
}


/* 歌单头部 */
.playlist-header {}

.playlist-header .image {
  width: 100%;
}

/* 歌手信息页面 */
.singer-content {
  width: 100%;
}

.van-tabs-class {
  background-color: #fafafa;
}

.singer-content .desc-info {
  margin: 30rpx;
}

.singer-name {
  margin: 30rpx;
  font-size: 56rpx;
  font-weight: 700;
  text-align: center;
}



/* 简介 */
.desc-info .desc {
  background: rgba(0, 0, 0, .3);
  border-radius: 22rpx;
  padding: 30rpx 60rpx 30rpx 30rpx;
  margin-bottom: 40rpx;
}

.desc-info .desc .title {
  font-size: 44rpx;
  font-weight: 700;
  height: 80rpx;
  line-height: 60rpx;
  box-sizing: border-box;
  white-space: nowrap;
  color: #fff;
}

.desc-info .desc .desc-content {
  text-align: left;
}

