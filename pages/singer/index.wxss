/* 消除 scroll-view 的滚动条 */
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.simi {
  padding: 30rpx 0 30rpx 30rpx;
}

.simi .album-list {
  /* vw 是视口宽度，和获取到屏幕宽度的方法达到的效果是一致的 */
  width: 100vw;
  white-space: nowrap;
  position: relative;
  left: -90rpx;
}

.simi .title {
  font-size: 44rpx;
  font-weight: 700;
  height: 80rpx;
  line-height: 60rpx;
  box-sizing: border-box;
  margin-bottom: 20rpx;
}

.simi .album-item {
  display: flex;
  vertical-align: top;
  width: 210rpx;
  margin-left: 90rpx;
}

.simi .album-item:last-of-type {
  margin-right: 20rpx;
}

.simi .item {
  display: inline-block;
  width: 100%;
  vertical-align: middle;
  margin-right: 40rpx;
}

.simi .item:last-of-type {
  display: inline-block;
  width: 100%;
  vertical-align: middle;
  margin-right: 60rpx;
}

.simi .top {
  width: 150rpx;
  height: 100%;
}

.simi .top .image {
  width: 150rpx;
  height: 135rpx;
  border-radius: 22rpx;
  /* background-size: cover; */
  /* box-shadow: 3px 2px 2px rgba(0, 0, 0, 0.5) */
}

.simi .top .bottom {
  width: 100%;
  font-size: 32rpx;
  font-weight: 700;
  text-align: center;
  /* 显示两行 */
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}