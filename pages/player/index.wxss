page {
  color: #fff;
}

/* 顶部状态栏 */
.nav-bar {
  position: fixed;
  top: 0;
  z-index: 99;
  background: transparent;
  width: 100%;
}

/* 胶囊按钮区域 */
.nav-bar .menu-bar {
  display: flex;
  position: absolute;
  width: 100%;
  background: #333;
  padding-left: 14px;
  color: #fff;
  font-size: 20px;
  font-weight: 700;
}


/* 导航栏未激活样式 */
.navbar-normal {
  margin-right: 14px;
}

/* 导航栏激活样式 */
.navbar-selected {
  color: #999999;
  transition: 0.2s all linear;
  margin-right: 14px;
  z-index: 2;
}

/* 导航栏下换线样式 */
.underline {
  position: absolute;
  bottom: 5px;
  background: #26ce8a;
  height: 10rpx;
  transition: all .3s linear;
  border-radius: 10rpx;
  z-index: 1;
}

.bg-image,
.bg-cover {
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
}

.bg-cover {
  background-color: rgba(0, 0, 0, .5);
  backdrop-filter: blur(30px);
}

/* 自定义导航 */
.tab {
  display: flex;
  font-size: 28rpx;
  color: #999;
}

.tab .divider {
  margin: 0 10rpx;
}

.tab .active {
  color: #fff;
}

/* 推荐信息 */
.comment {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  box-sizing: border-box;
  padding: 30rpx;
  
}

.comment .info {
  height: 100%;
  flex: 2;
}

/* 歌曲标题、歌手、专辑名 */
.info .bg-info {
  background: rgba(255, 255, 255, .1);
  border-radius: 22rpx;
  padding: 30rpx 60rpx 30rpx 30rpx;
  margin-bottom: 40rpx;
}

.info .bg-info .title {
  font-size: 56rpx;
  font-weight: 700;
  height: 100rpx;
  line-height: 60rpx;
  box-sizing: border-box;
  border-bottom: 1px solid rgba(255, 255, 255, .5);
  white-space: nowrap;
}


.info .bg-info .singer-name {
  font-size: 36rpx;
  font-weight: 600;
  margin: 30rpx 0;
  display: flex;
  align-items: center;
}

.info .bg-info .singer-name .image{
  width: 110rpx;
  height: 90rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  box-shadow:0 2px 2px rgba(0,0,0,0.2);
}

.info .bg-info .album-name {
  font-size: 36rpx;
  font-weight: 600;
  margin: 30rpx 0 0 0;
  display: flex;
  align-items: center;
}

.info .bg-info .album-name .image{
  width: 110rpx;
  height: 90rpx;
  border-radius: 20rpx;
  margin-right: 20rpx;
  box-shadow:0 2px 2px rgba(0,0,0,0.2);
}

/* 相关歌曲 */
.info .bg2-info {
  background: rgba(255, 255, 255, .1);
  border-radius: 22rpx;
  padding: 30rpx 60rpx 30rpx 30rpx;
  margin-bottom: 40rpx;
}

.info .bg2-info .title {
  font-size: 44rpx;
  font-weight: 700;
  height: 80rpx;
  line-height: 60rpx;
  box-sizing: border-box;
  white-space: nowrap;
}

.info .bg2-info .songs-info {
  font-size: 36rpx;
  font-weight: 600;
  margin: 30rpx 0 0 0;
  display: flex;
  align-items: center;
}

.info .bg2-info .songs-info .image {
  width: 110rpx;
  height: 90rpx;
  border-radius: 20rpx;
  margin-right: 20rpx;
  box-shadow:0 2px 2px rgba(0,0,0,0.2);
}



/* 内容样式 */
.content {
  color: #fff;
}

.content .music {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  box-sizing: border-box;
  padding: 30rpx 40rpx;
}

.music .music-content {
  height: 100%;
}


/* 封面 */
.album {
  display: flex;
  align-items: center;
}

.album .image {
  width: 100%;
  border-radius: 12rpx;
}



/* 歌曲信息 */
.music .info {
  margin: 60rpx 0;
}

.music .info .title {
  font-size: 48rpx;
  font-weight: 700;
  white-space: nowrap;
}


.music .info .singer,
.music .info .alias {
  font-size: 26rpx;
  color: #ccc;
  margin: 16rpx 0;
  white-space: nowrap;
}

/* 歌词 */
.music .lyric {
  display: flex;
  align-items: center;
  justify-content: center;
  flex: 1;
  font-size: 28rpx;
  color: #26ce8a;
  margin: 60rpx 0;
}

.music .lyric .song-lyric {
  height: 75rpx;
  text-align: center;
}

/* 进度 */
.progress {
  margin: 50rpx 0;
}

.slider {
  margin: 0 10px 18rpx 10rpx;
}

.time {
  display: flex;
  justify-content: space-between;
  color: #ccc;
  font-size: 22rpx;
}

.time .current {
  margin-left: 10rpx;
}


/* 操作css */
.operation {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 70rpx 0 0rpx;
}

.operation .btn {
  display: inline-block;
  width: 60rpx;
  height: 60rpx;
  padding: 0;
}

.operation .btn-mode {
  width: 80rpx;
  height: 80rpx;
}

.operation .btn-pause {
  width: 130rpx;
  height: 130rpx;
}

/* 歌词分页的样式 */
.lyric-list {
  height: 100%;
  box-sizing: border-box;
  overflow: hidden;
  padding: 0 10px;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.lyric-list .item {
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  height: 70px;
  /* line-height: 30px; */
  font-size: 28rpx;
  text-align: center;
  color: #989898;

}

.lyric-list .item.active {
  color: #26ce8a;
  font-size: 36rpx;
  margin: 10rpx 0;
}

.lyric-list .noLyric {
  display: flex;
  align-items: center;
  justify-content: center;
  vertical-align: middle;
  text-align: center;
  font-weight: 700;
}

.wrapper {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100%;
  box-sizing: border-box;
  padding: 30rpx 40rpx;
}

.block {
  width: 120px;
  height: 120px;
  background-color: #fff;
  color: #26ce8a;
}