page {
  padding-bottom: 20rpx;
}

/* 顶部状态栏 */
.nav-bar {
  position: fixed;
  top: 0;
  z-index: 99;
  background: #fafafa;
  width: 100%;
}

/* 胶囊按钮区域 */
.nav-bar .menu-bar {
  display: flex;
  position: absolute;
  width: 100%;
  background: #333;
  padding-left: 14px;
  color: #fff;
  font-size: 20px;
  font-weight: 700;
}


/* 导航栏未激活样式 */
.navbar-normal {
  margin-right: 14px;
}

/* 导航栏激活样式 */
.navbar-selected {
  color: #999999;
  transition: 0.2s all linear;
  margin-right: 14px;
  z-index: 2;
}

/* 导航栏下换线样式 */
.underline {
  position: absolute;
  bottom: 5px;
  background: #26ce8a;
  height: 10rpx;
  transition: all .3s linear;
  border-radius: 10rpx;
  z-index: 1;
}

/* 首页高度样式 */
.indexStyle {
  height: 2600rpx;
  padding: 0 24rpx;
}

/* 轮播图样式 */
.swiper {
  border-radius: 10rpx;
  overflow: hidden;
  /* 如果某些机型出现圆角不显示的情况，可以使用这个样式 */
  transform: translateY(0);
}

.swiper-item {
  display: flex;
  position: relative;
}

.swiper-item .swiper-image {
  width: 100%;
  
}
.swiper-item .type {
  position: absolute;
  font-weight: 500;
  right: 0;
  bottom: 0;
  color: #fff;
  font-size: 26rpx;
  border-radius: 10rpx;
  padding: 2rpx 10rpx;

}

.anchor-top {
  width: 0;
  height: 0;
  position: absolute;
  top: 0;
}

.anchor-bottom {
  position: absolute;
  width: 0;
  height: 0;
  bottom: 0;
}

.bottom-image {
  position: absolute;
  bottom: 0;
  height: 100px;
}