/* 顶部状态栏 */
.nav-bar {
  position: fixed;
  top: 0;
  z-index: 99;
  /* background: #999999; */
  width: 100%;
}

/* 胶囊按钮区域 */
.nav-bar .menu-bar {
  display: flex;
  align-items: center;
  position: absolute;
  width: 100%;
  /* background: rgba(255, 255, 255, 0.3); */
  color: #fff;
  font-size: 20px;
  font-weight: 700;
}

/* 导航栏按钮 */
.nav-bar .menu-bar .left {
  display: flex;
  /* flex: 0.5; */
}

.nav-bar .menu-bar .arrow {
  height: 40rpx;
  width: 40rpx;
  margin-right: 10rpx;
}

/* 导航栏标题 */
.nav-bar .menu-bar .title {
  /* flex: 2; */
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  text-align: center;
  position: absolute;
  left: 0;
  right: 0;
  margin: 0 auto;
}

/* 导航栏占位 */
.nav-bar .menu-bar .right {
  /* flex: 0.5; */
}

/* 榜单头部 */
.ranking-header {
  position: fixed;
  top: 0;
}


/* 榜单列表 */
.rankingList {
  z-index: 1;
  margin: 0 24rpx;
}