/* pages/search/index.wxss */

page {
  padding: 0 24rpx;
  padding-top: 112rpx;
}

/* 搜索框 */
.search {
  position: fixed;
  top: 0;
  left: 20rpx;
  right: 20rpx;
}

/* 热门搜索 */
.hotSearch {
  padding: 10rpx;
}

.hotSearch .hotList {
  display: flex;
  flex-wrap: wrap;
}

.hotSearch .hotItem {
  font-size: 26rpx;
  background-color: #ffffff;
  padding: 10rpx 12rpx;
  border-radius: 16rpx;
  margin: 20rpx 20rpx 0 0;
}

.hotSearch .hotItem:first-of-type {
  color: #26ce8a;
}

/* 建议搜索 */
.suggestSearch {
  padding: 10rpx;
}

.suggestSearch .title {
  color: #26ce8a;
  font-size: 34rpx;
  font-weight: 700;
}

.suggestSearch .suggestItem {
  display: flex;
  align-items: center;
  margin-top: 16rpx;
}

.suggestSearch .suggestItem .icon {
  width: 66rpx;
  margin-left: -20rpx;
}

.suggestSearch .suggestItem .text {
  font-size: 28rpx;
}