.item {
  display: flex;
  justify-content: space-between;
  background-color: #eee;
  border-radius: 12rpx;
  overflow: hidden;
  margin-bottom: 20rpx;
  width: 92vw;
}

.content {
  padding: 24rpx;
  flex: 1;
  /* min-width: 0; */
  overflow: hidden;
}

.content-title {
  font-size: 34rpx;
  font-weight: 600;

}

.content-list {
  font-size: 24rpx;
  width: 100%;
  margin-top: 6rpx;
}

.content-list-item {
  color: #333;
  margin-top: 6rpx;
  width: 100%;

  display: inline-block;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  text-emphasis: none;
}

.content-list-item .index {
  font-weight: 600;
}

.content-list-item .singer {
  color: #999;
  margin-left: 6rpx;
}

.album {
  position: relative;
  width: 220rpx;
  display: flex;
}

.album .image {
  width: 100%;
  height: 100%;
  display: block;
  border-radius: 12rpx;
  box-shadow: 0 5px 20px rgba(0, 0, 0, 0.5)
}

.album .play-counter {
  position: absolute;
  display: flex;
  align-items: center;
  right: 0;
  bottom: 0rpx;
  color: #fff;
  font-size: 22rpx;
  border-radius: 12rpx;
  padding: 6rpx 10rpx;
  background: rgba(0, 0, 0, .5);
}

.album .play-counter .arrow {
  height: 36rpx;
  width: 36rpx;
}

.bottom-image {
  position: absolute;
  bottom: 0;
  z-index: -1;
  width: 50%;
  height: 8.5%;
  left: 0;
  right: 0;
  margin: auto;
}