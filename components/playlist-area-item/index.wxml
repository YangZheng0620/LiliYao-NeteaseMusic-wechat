<!-- 推荐歌单项目 -->

<!-- 导入格式化工具 -->
<wxs src="../../utils/format.wxs" module="format"></wxs>

<view class="item">
  <view class="top">
    <image class="image" mode="widthFix" src="{{item.picUrl}}"></image>
    <view class="play-counter">
      <iconfont name="arrow_right_fat" color="#26ce8a"></iconfont>
      {{format.formatCount(item.playCount)}}
    </view>
  </view>
  <view class="bottom">{{item.name}}</view>
  <view class="copyright">#{{item.copywriter}}</view>
</view>