/* 毛玻璃背景 */
.header {
  width: 100vw;
  position: relative;
  /* left: -20rpx; */
  display: flex;
  flex-direction: column;
  /* height: 430rpx; */
  color: #fff;
}

.header .bg-image {
  position: absolute;
  z-index: -1;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  box-shadow:0 5px 7px rgba(0,0,0,0.5)
}


.header .bg-cover {
  position: absolute;
  z-index: -1;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, .5);
  backdrop-filter: blur(20px);
}

/* 歌单图片以及文本 */
.content {
  display: flex;
  margin-top: 80rpx;
  padding: 0 40rpx;
  align-items: center;
}

.content .image {
  width: 220rpx;
  height: 220rpx;
  border-radius: 16rpx;
  box-shadow:0 5px 5px rgba(0,0,0,0.5)
}


.content .info {
  position: relative;
  height: 220rpx;
  flex: 1;
  margin-left: 10rpx;
}

.content .info .title-info {
  position: relative;
  display: flex;
}

.content .info .title-info .desc .desc-info {
  display: flex;
  align-items: center;
  text-align: left;
  margin-top: 20rpx;
}

.content .info .title-info .desc .desc-info .desc-info-name {
  font-weight: 600;
  font-size: 36rpx;
}

.content .info .title-info .desc .desc-info .desc-info-time {
  font-weight: 500;
  font-size: 20rpx;
  margin-left: 10rpx;
}

.content .info .title-info .desc .title {
  font-weight: 700;
  font-size: 64rpx;
  text-align: left;
  margin: 2rpx 0 16rpx 0;

}

.content .info .title-info .desc .updateTime {
  font-weight: 500;
  font-size: 24rpx;
}


.content .info .image-info {
  position: absolute;
  left: 0;
  top: 0;
  height: 250rpx;
  width: 320rpx;
  opacity: 0.2;
}